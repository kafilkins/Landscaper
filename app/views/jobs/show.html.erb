<h1>Jobs</h1>

<% @job.tasks.each do |task| %>
    <table style="width:100%">
            <tr>
                <th>Location</th>
                <th>Task</th>
            </tr>

            <tr>
                <td><%= @job.location %></td>
                <td><%= task.name %></td>
            </tr>
            <% end %>

            <% if session[:customer_id].present? %>
                <%= form_for([@job, @task]) do |f| %>
                <%= f.text_field :name, :class => "new-todo" %>
                <%= f.submit %>
                <% end %>
            <% end %>

            <% if @task.errors.any? %>
                <div class="alert alert-danger">
                <% @task.errors.full_messages.each do |message| %>
                    <div><%= message %></div>
                    <% end %>
            <% end %>
    </table>

