<h1>My Jobs</h1>

<%= form_tag("/jobs", method: 'get') do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<ul class="index">

    <% @jobs.each do |j| %>
        <li><%= link_to j.location, "/jobs/#{j.id}" %></li>
        <li><% if session[:employee_id].present? %></li>
        <li><%= link_to "Edit", edit_job_path(j) %></li>
        <% end %>
        <% end %>
</ul>

