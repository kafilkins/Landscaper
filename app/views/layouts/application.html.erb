<!DOCTYPE html>
<html>
  <head>
    <title>Landscaper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <div>
    <% if logged_in_as_customer? %>
      <%= link_to "Add a Job", new_job_path %> |
      <%= link_to "View My Jobs", jobs_path %> |
      <%= link_to "Logout", logout_path, method: "delete" %>
    <% elsif logged_in_as_employee? %>
      <%= link_to "View All Jobs", jobs_path %> |
      <%= link_to "Logout", logout_path, method: "delete" %>
    <% else %>
      <%= link_to "Customer Sign Up", "/customers/new" %> |
      <%= link_to "Employee Sign Up", "/employees/new" %> |
      <%= link_to "Log In", "/login" %>
    <% end %>
    </div>

  <body>
    <%= yield %>
  </body>
</html>
