<h1>Login</h1>

<%= flash[:message] if flash[:message] %>

<%= button_to "Log In With Google", '/auth/google_oauth2' %> <br>

<%= form_for :user, url: '/sessions' do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.submit "Submit" %>

    <% end %>   